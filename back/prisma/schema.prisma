generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Estudiante {
  id            Int     @default(autoincrement()) @id
  email         String  @unique
  nombre        String?
  calificacion  Calificacion[]
}

model Calificacion {
  id        Int      @default(autoincrement()) @id
  materia     String
  calificacion Int
  estudiante  Estudiante @relation(fields: [estudianteId], references: [id])
  estudianteId Int
}
